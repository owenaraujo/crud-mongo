<!-- modal add  -->
<div
class="modal fade "
id="modalAdd"
tabindex="-1"
role="dialog"
aria-labelledby="myModalLabel"
aria-hidden="true"
>
<div class="modal-dialog modal-md" role="document">
  <div class="modal-content " :class="{'dark-secondary ': dark}">
    <div class="modal-header text-center " :class="{'color-secondary text-white': dark}">
      <h4 class="modal-title w-100 font-weight-bold">Agregar</h4>
      <button
        type="button"
        class="close"
        data-dismiss="modal"
        aria-label="Close"
      >
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body mx-3 ">
      <form id="formAdd" class="">
        <div class="form-group mb-2">
          <div class="d-flex">
            <select
              onchange="validateProveedor(this)"
              class="form-control custom-select mt-3 w-50 mr-2"
              name=""
              id="proveedor_id"
            ></select>
            <select
              onchange="validateCategoria(this)"
              class="form-control custom-select mt-3 w-50 ml-2"
              name=""
              id="categoria"
            ></select>
          </div>

          <div class="d-flex">
            <input
              required
              type="text"
              onkeyup="validateNombre(this)"
              id="nombre"
              name="nombre"
              placeholder="nombre"
              class="form-control mt-3 mr-2"
              autocomplete="off"
            />
            <input
              required
              type="text"
              onkeyup="validateCod(this)"
              
              id="codigo"
              name="codigo"
              placeholder="codigo"
              class="form-control mt-3 ml-2 w-40"
              autocomplete="off"
            />
          </div>

          <div class="d-flex">
            <input
              required
              type="text"
              onkeyup="validatePrecioUnitario(this)"

              id="precioUnitario"
              name="precioUnitario"
              placeholder="precio Unitario"
              class="form-control mt-3 mr-2"
              autocomplete="off"
            />
            <input
              required
              onkeyup="validateCantidad(this)"
              type="text"
              id="cantidad"
              name="cantidad"
              placeholder="cantidad"
              class="form-control mt-3 w-50 mr-2 ml-2 w-25"
              autocomplete="off"
            />
            <select
            onchange="validateUnidad(this)"

              required
              type="text"
              id="unidadMedida"
              name="unidadMedida"
              placeholder="Unidad de Medida"
              class="form-control custom-select mt-3 w-50 ml-2"
              autocomplete="off"
            >
              <option selected disabled value="0">Unidad de Medida</option>
              <option value="Lts">litros</option>
              <option value="Kg">kilogramos</option>
              <option value="Gl">galon</option>
            </select>
          </div>
          <textarea
            required
            type="text"
            onkeyup="validateDescripcion(this)"
            id="descripcion"
            name="descripcion"
            placeholder="descripcion"
            class="form-control mt-3"
            autocomplete="off"
            cols="1"
            rows="2"
          ></textarea>
        </div>
      </form>
    </div>
    <div
      class="modal-footer d-flex justify-content-center mr-4 ml-4"
    >
      <button
        type="button"
        onclick="addProducto()"
        id="btnPost"
        class="text-white mt-3 btn btn-block green-success color-primary"
      >
        guardar
      </button>
    </div>
  </div>
</div>
</div>

