<!-- modal edit -->

<div
class="modal fade"
id="modalEdit"
tabindex="-1"
role="dialog"
aria-labelledby="myModalLabel"
aria-hidden="true"
>
<div class="modal-dialog modal-md" role="document">
  <div class="modal-content" :class="{'dark-secondary ': dark}">
    <div
      class="modal-header text-center"
      :class="{'color-secondary text-white': dark}"
    >
      <h4 class="modal-title w-100 font-weight-bold">Editar</h4>
      <button
        type="button"
        class="close"
        data-dismiss="modal"
        aria-label="Close"
      >
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body mx-3">
      <div class="md-form mb-4 d-flex">
        <i class="fas fa-search prefix grey-text"></i>
        <input
          type="text"
          id="searchFromEdit"
          class="form-control"
          :class="{'text-white':dark}"
        />
        <select
          style="
            border-bottom-right-radius: 20px;
            border-top-right-radius: 20px;
            border-left: 0px;

            border-top: 0px;
            padding-left: 10px;
          "
          name=""
          id=""
          class="form-control w-40 custom-select ml-3"
          :class="{'text-white':dark}"
        >
          <option :class="{'text-white bg-dark':dark}" value="nombre">
            nombre
          </option>
          <option :class="{'text-white bg-dark':dark}" value="codigo">
            codigo
          </option>
          <option :class="{'text-white bg-dark':dark}" value="correo">
            correo
          </option>
          <option :class="{'text-white bg-dark':dark}" value="direccion">
            direccion
          </option>
        </select>
        <label
          data-error="wrong"
          :class="{'text-white': dark}"
          data-success="right"
          for="defaultForm-pass"
          >buscar</label
        >
      </div>

      <div
        id="resultado"
        class="list-scroll scrollbar-light-blue"
        style="max-height: 50vh"
      >
        <div class="c-hand div-search mb-3">
          <div class="text-center w-100">nombre del proveedor codigo</div>
        </div>
      </div>

      <form id="formEdit" class="d-none">
        <div class="form-group mb-2">
          <input
            required
            type="text"
            onkeyup="validateNombre(this)"
            id="nombreEdit"
            name="nombre"
            placeholder="nombre"
            class="form-control mt-3"
            autocomplete="off"
          />
          <input
            required
            type="text"
            onkeyup="validateCod(this)"
            style="text-transform: uppercase"
            id="codigoEdit"
            name="codigo"
            placeholder="codigo"
            class="form-control mt-3"
            autocomplete="off"
          />
          <input
            required
            type="text"
            onkeyup="validateDescripcion(this)"
            id="descripcionEdit"
            name="descripcion"
            placeholder="descripcion"
            class="form-control mt-3"
            autocomplete="off"
          />
          <div class="d-flex">
            <input
              required
              type="email"
              onkeyup="validateCorreo(this)"
              id="correoEdit"
              name="correo"
              placeholder="correo"
              class="form-control mt-3 mr-2"
              autocomplete="off"
            />
            <input
              required
              type="number"
              onkeyup="validateTelefono(this)"
              id="telefonoEdit"
              name="telefono"
              placeholder="telefono"
              class="form-control mt-3 ml-2 w-75"
              autocomplete="off"
            />
          </div>
          <input
            required
            type="text"
            onkeyup="validateDireccion(this)"
            id="direccionEdit"
            name="direccion"
            placeholder="direccion"
            class="form-control mt-3"
            autocomplete="off"
          />
        </div>
      </form>
    </div>
    <div class="modal-footer d-flex justify-content-center mr-4 ml-4">
      <button
        type="button"
        onclick="addProveedores()"
        id="btnPost"
        class="text-white mt-3 btn btn-block green-success color-primary"
      >
        guardar
      </button>
    </div>
  </div>
</div>
</div>

