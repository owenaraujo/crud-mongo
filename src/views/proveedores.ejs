<% extend ('layout/layout', {title: 'inventario de proveedores'})%>

<div class="container-fluid ">
    <div class="row mx-auto">
        <div class=" col-lg-9 col-md-8 col-sm-10 mx-auto">
            <div class="card mt-3 list-scroll">
                <div class="text-center">
                    <table class="table table-striped table-hover ">
                        <thead class="table-dark">
                        <tr>
                          <th scope="col">#</th>
                          <th scope="col">Proveedor</th>
                          <th scope="col">Correo</th>
                          <th scope="col">Telefono</th>
                          <th scope="col">acciones</th>
                        </tr>
                      </thead>
                      <tbody class="" id="tabla">
              
                      </tbody>
                    </table>
                  </div>
            </div>
            
        </div>
        <div class="col-lg-3 col-md-4 col-sm-10 mx-auto">
           <div class="card mt-3">
               <div class="card-body">
                <form action="/proveedores/post" method="post">
                    <div class="form-group">
                       
                        <input type="text" id="nombre" name="nombre" placeholder="nombre" class="form-control mt-3" autocomplete="off">
                        <input type="text" id="codigo" name="codigo" placeholder="codigo" class="form-control mt-3" autocomplete="off">
                        <input type="text" id="descripcion" name="descripcion" placeholder="descripcion" class="form-control mt-3" autocomplete="off">
                        <input type="text" id="correo" name="correo" placeholder="correo" class="form-control mt-3" autocomplete="off">
                        <input type="text" id="telefono" name="telefono" placeholder="telefono" class="form-control mt-3" autocomplete="off">
                        <input type="text" id="direccion" name="direccion" placeholder="direccion" class="form-control mt-3" autocomplete="off">
                     
                       <button type="submit" id="btnPost" class="mt-3 btn btn-block green-success">guardar</button>
                    </div>
                    </form>
               </div>
           </div>

        </div>
    </div>
</div>
<script src="/controller/proveedores.js"></script>
