<% extend('layout/layoutIndex',{title:'Login'}) %>
<div class="container-fluid mt-4">
  <div class="row">
    <div class="col-10 col-md-4 col-lg-3 mx-auto">
      <div class="card mt-4">
        <div class="cuarto text-center text-white h4 card-header">signin</div>
        <div class="card-body">
          <form action="/auth/signin" method="POST" class="form-group">
            <input
              id="username"
              name="username"
              type="text"
              class="form-control mt-4 p-4 mx-auto"
              placeholder="Nombre de usuario"
            />
            <input
              name="password"
              id="password"
              type="password"
              class="form-control mt-4 p-4 mx-auto"
              placeholder="ContraseÃ±a"
            />
            <button
              id="signin"
              class="text-center btn btn-success btn-block mt-4"
            >
              acceder
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  window.onload = () => {
    document.querySelector("#load").classList.add("d-none");

    document.querySelector("#scroll").classList.remove("scroll");
  };
</script>
<script src="/controller/signin.js"></script>
