<div class="container-fluid mt-4">
  <div class="row">
    <div class="col-12 col-md-12 col-lg-5 mx-auto">
      
         
      
            <!--Modal cascading tabs-->
            <div class="modal-c-tabs card ">
      
              <!-- Nav tabs -->
              <ul class="nav nav-tabs md-tabs tabs-2  darken-3 text-center " role="tablist" style="justify-content: center;">
                <li class="nav-item" style="border-radius: 0%;">
                  <a class="nav-link  active" data-toggle="tab" href="#signin" role="tab"><i class="fas fa-user mr-1"></i>
                    iniciar</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" data-toggle="tab" href="#signup" role="tab"><i class="fas fa-user-plus mr-1"></i>
                    Registrarse</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" data-toggle="tab" href="#forgotPassword" role="tab"><i class="fas fa-user-alt-slash"></i>
                    Recuperar</a>
                </li>
              </ul>
      
              <!-- Tab panels -->
              <div class="tab-content card-body">
                <!--Panel 7-->
                <div class="tab-pane fade in show active" id="signin" role="tabpanel">
      
                  <!--Body-->
                  <form action="/auth/signin" method="POST">
                    <div class="modal-body mb-1">
                      <div class="md-form form-sm mb-5">
                        <i class="fas fa-user prefix"></i>
                        <input type="text" id="modalLRInput10" autocomplete="off" name="username" class="form-control form-control-sm validate">
                        <label data-error="wrong" data-success="right" for="modalLRInput10">ingrese nombre de usuario</label>
                      </div>
        
                      <div class="md-form form-sm mb-4">
                        <i class="fas fa-lock prefix"></i>
                        <input type="password" id="modalLRInput11"  autocomplete="off"  name="password" class="form-control form-control-sm validate">
                        <label data-error="wrong" data-success="right" for="modalLRInput11">ingrese contrase침a</label>
                      </div>
                      <div class="text-center mt-2">
                        <button type="submit" class="btn btn-info"> iniciar sesi칩n <i class="fas fa-sign-in ml-1"></i></button>
                      </div>
                    </div>
                  </form>
                  <!--Footer-->
                  
      
                </div>
                <!--/.Panel 7-->
      
                <!--Panel 8-->
                <div class="tab-pane fade chat-room"  id="signup" role="tabpanel">
      
                  <!--Body-->
                  <div class="list-unstyled chat-1 scrollbar-light-blue " style="max-height:70vh;">
                    
                    
                    
      <div class="modal-body">

        <div class="md-form form-sm ">
          <i class="fas fa-user prefix"></i>
          <input type="text" id="usernamePost" class="form-control form-control-sm ">
          <label data-error="wrong" data-success="right" for="usernamePost">Ingrese nombre de usuario</label>
        </div>
        <div class="md-form form-sm ">
          <i class="fas fa-question prefix"></i>
          <input type="text" id="pregunta" class="form-control form-control-sm validate">
          <label data-error="wrong" data-success="right" for="pregunta">Pregunta de Seguridad</label>
        </div>
        <div class="md-form form-sm ">
          <i class="fas fa-question-circle prefix"></i>
          <input type="text" id="respuesta" class="form-control form-control-sm validate">
          <label data-error="wrong" data-success="right" for="respuesta">Ingrese su Respuesta</label>
        </div>
        
        <div class="md-form form-sm ">
          <i class="fas fa-unlock prefix"></i>
          <input type="password" id="passwordPost" class="form-control form-control-sm validate">
          <label data-error="wrong" data-success="right" for="passwordPost">Nueva Contrase침a</label>
        </div>

        <div class="md-form form-sm ">
          <i class="fas fa-lock prefix"></i>
          <input type="password" id="verifyPassword" class="form-control form-control-sm ">
          <label data-error="wrong" data-success="right" for="verifyPassword">Valida la Contrase침a</label>
        </div>

        <div class="text-center form-sm mt-2">
          <button onclick="addUser()" class="btn btn-info">Registrar<i class="fas fa-sign-in ml-1"></i></button>
        </div>
      </div>
      
                  </div>
                  <!--Footer-->
                  
                </div>
                <div class="tab-pane fade " id="forgotPassword" role="tabpanel">
      
                  <!--Body-->
                  <div class="modal-body">
                    <div class="md-form form-sm mb-5">
                      <i class="fas fa-envelope prefix"></i>
                      <input type="email" id="modalLRInput12" class="form-control form-control-sm validate">
                      <label data-error="wrong" data-success="right" for="modalLRInput12">Your email</label>
                    </div>
      
                    <div class="md-form form-sm mb-5">
                      <i class="fas fa-lock prefix"></i>
                      <input type="password" id="modalLRInput13" class="form-control form-control-sm validate">
                      <label data-error="wrong" data-success="right" for="modalLRInput13">Your password</label>
                    </div>
      
                    <div class="md-form form-sm mb-4">
                      <i class="fas fa-lock prefix"></i>
                      <input type="password" id="modalLRInput14" class="form-control form-control-sm validate">
                      <label data-error="wrong" data-success="right" for="modalLRInput14">Repeat password</label>
                    </div>
      
                    <div class="text-center form-sm mt-2">
                      <button class="btn btn-info">Sign up <i class="fas fa-sign-in ml-1"></i></button>
                    </div>
      
                  </div>
                  <!--Footer-->
                  <div class="modal-footer">
                    <div class="options text-right">
                      <p class="pt-1">Already have an account? <a href="#" class="blue-text">Log In</a></p>
                    </div>
                    <button type="button" class="btn btn-outline-info waves-effect ml-auto" data-dismiss="modal">Close</button>
                  </div>
                </div>
                <!--/.Panel 8-->
              </div>
      
            </div>
          
          <!--/.Content-->
        </div>
      </div>
      <!--Modal: Login / Register Form-->
    </div>
  </div>
</div>
<script>
  window.onload = () => {
    document.querySelector("#load").classList.add("d-none");

    document.querySelector("#scroll").classList.remove("scroll");
  };
</script>
